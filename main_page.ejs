<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Main Page</title>
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="https://crystalpng.com/wp-content/uploads/2023/04/BTS-Logo.png">
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Mono:ital,wght@0,100..700;1,100..700&display=swap"
        rel="stylesheet">
    <!-- Stylesheets-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <style>
        * {
            font-family: 'Montserrat', sans-serif;
        }

        .navbar-brand {
            font-weight: bold;
        }


        .nav-item {
            padding: 0 15px;
            font-weight: lighter;
            font-size: 1.2rem;
        }

        .nav-link {
            font-size: 1.7rem;
        }

        #title {
            background: #9b6c9a;
            margin-top: 16px;
        }

        section,
        footer {
            margin: auto;
        }

        footer {
            background: #000;
            padding: 10px 0;
        }


        footer p {
            margin: 0;
            text-align: center;
            color: #FFF;
        }

        footer {
            margin-top: 50px;
        }

        .footer_content {
            display: flex;
            justify-content: space-between;
            margin-top: 10px;
            margin-bottom: 10px;
            color: white;
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
        }

        .btn {
            background-color: #9b6c9a;
        }
    </style>
</head>

<body>

    <section id="title">
        <div class="container-fluid ">
            <!-- Navigation bar -->
            <nav class="navbar navbar-expand-lg navbar-light ">
                <a class="navbar-brand text-black" style="font-size: 50px;">
                    <span class="ml-2">BTS</span>
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fas fa-sliders"></i>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link text-black font-weight-bold" href="/main_page/<%= userId %>">Main
                                Page</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-black font-weight-bold" href="/btsTopTracks">API 1</a>

                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-black font-weight-bold" href="/api2">API 2</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-black font-weight-bold" href="/api3">API 3</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-black font-weight-bold" href="/admin">Admin Page</a>

                        </li>
                    </ul>
                </div>
            </nav>
        </div>
        </div>
    </section>



    <div class="container mt-5">


        <div class="container mt-3 mb-5">
            <h2>Portfolio Items<button id="contactButton" class="btn btn-primary ml-2">Contact Info</button></h2>

        </div>

        <div class="row">
            <% portfolioItem.forEach((item, index)=> { %>
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div id="carouselExampleControls<%= index %>" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-inner">
                                <% item.images.forEach((image, imageIndex)=> { %>
                                    <div class="carousel-item <%= imageIndex === 0 ? 'active' : '' %>">
                                        <img src="<%= image %>" class="d-block w-100" alt="...">
                                    </div>
                                    <% }) %>
                            </div>
                            <button class="carousel-control-prev" type="button"
                                data-bs-target="#carouselExampleControls<%= index %>" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button"
                                data-bs-target="#carouselExampleControls<%= index %>" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= item.nameEng %> | <%= item.nameKaz %>
                            </h5>
                            <p class="card-text">
                                <%= item.descriptionEng %> | <%= item.descriptionKaz %>
                            </p>
                        </div>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>











    <!-- Footer -->
    <footer>
        <i class="fa-solid fa-arrow-up"></i>
        </button>
        <p>Nazken Koblanova | Group SE-2228</p>
    </footer>

    <!-- Scripts -->
    <!-- Bootstrap JS -->
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Add click event listener to Contact Info button
        document.getElementById('contactButton').addEventListener('click', async () => {
            try {
                // Make a GET request to the route handling email sending
                const response = await fetch('/contact_info', { method: 'GET' });
                // Handle the response as needed
                if (response.ok) {
                    console.log('Contact info email sent successfully');
                    // Optionally, display a message to the user indicating success
                } else {
                    console.error('Failed to send contact info email');
                    // Optionally, display an error message to the user
                }
            } catch (error) {
                console.error('Error sending contact info email:', error);
                // Optionally, display an error message to the user
            }
        });

    </script>


</body>

</html>